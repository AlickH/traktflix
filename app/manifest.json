{
  "background": {
    "scripts": [
      "js/browser-polyfill.js",
      "js/vendor.js",
      "js/background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{6ec204f7-4915-4b99-ac04-673a51b6aeec}"
    }
  },
  "content_scripts": [
    {
      "js": [
        "js/browser-polyfill.js",
        "js/content.js"
      ],
      "matches": [
        "*://*.netflix.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "default_locale": "en",
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "img/traktflix-icon-16.png",
    "128": "img/traktflix-icon-128.png"
  },
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "page_action": {
    "default_icon": {
      "19": "img/traktflix-icon-19.png",
      "38": "img/traktflix-icon-38.png"
    },
    "default_popup": "popup.html",
    "default_title": "traktflix"
  },
  "optional_permissions": [
    "notifications",
    "*://api.rollbar.com/*",
    "*://google-analytics.com/*",
    "*://script.google.com/*",
    "*://script.googleusercontent.com/*"
  ],
  "permissions": [
    "declarativeContent",
    "identity",
    "storage",
    "tabs",
    "unlimitedStorage",
    "*://*.netflix.com/*",
    "*://*.trakt.tv/*"
  ],
  "version": "2.0.7",
  "web_accessible_resources": [
    "img/traktflix-icon-38.png",
    "img/traktflix-icon-selected-38.png",
    "img/svg/*.svg"
  ]
}
